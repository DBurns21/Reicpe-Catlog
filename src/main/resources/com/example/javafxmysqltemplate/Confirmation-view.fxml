<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="150" prefWidth="250" spacing="10" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafxmysqltemplate.RecipeController">
    <Text>Are you sure you want to delete this recipe?</Text>

    <HBox alignment="CENTER" spacing="50">
        <Button fx:id="yesButton" onAction="#onConfirmationClick" text="Yes"> </Button>
        <Button fx:id="noButton" onAction="#onConfirmationClick" text="No"> </Button>
    </HBox>
</VBox>
