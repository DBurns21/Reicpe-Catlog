<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.javafxmysqltemplate.RecipeCatalogController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <VBox spacing="5" alignment="CENTER">
        <TextField fx:id="userNameBar" promptText="Enter Your Username" onAction="#onSignInClick" maxWidth="150"/>
        <TextField fx:id="passwordBar" promptText="Enter Your Password" onAction="#onSignInClick" maxWidth="150"/>
        <Label fx:id="errorText" textFill="red"/>
    </VBox>

    <Label fx:id="welcomeText"/>
    <Button text="Sign In" onAction="#onSignInClick"/>
</VBox>
